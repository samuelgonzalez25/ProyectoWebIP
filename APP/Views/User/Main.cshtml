@{
    ViewData["Title"] = "Menú Principal";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Menú Principal</h2>
        </div>
        <div class="card-body">
            <p class="lead">Desde aquí puedes acceder a todas las acciones del CRUD de usuarios:</p>

            <div class="row row-cols-1 row-cols-md-2 g-3">
                <div class="col">
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary w-100">
                        <i class="bi bi-list-ul me-2"></i> Lista de Usuarios
                    </a>
                </div>
                <div class="col">
                    <a asp-controller="User" asp-action="Create" class="btn btn-outline-success w-100">
                        <i class="bi bi-person-plus me-2"></i> Crear Nuevo Usuario
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
