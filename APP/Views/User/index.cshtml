@model List<APP.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

<!-- Mensajes de éxito o error -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Botón para crear nuevo usuario -->
<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
</p>

<!-- Formulario de búsqueda por ID o Nombre -->
<form class="row g-3 mb-3" method="get" asp-action="Search">
    <div class="col-auto">
        <input type="text" class="form-control" name="searchTerm" placeholder="Buscar por ID o Nombre..." />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>
</form>

<!-- Tabla de usuarios -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Rol</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Sexo</th>
            <th>Nivel Académico</th>
            <th>Institución</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Rol</td>
                    <td>@user.Nombre</td>
                    <td>@user.Apellido</td>
                    <td>@(user.Sexo == "M" ? "Masculino" : user.Sexo == "F" ? "Femenino" : "Desconocido")</td>
                    <td>@user.NivelAcademico</td>
                    <td>@user.Institucion</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm" 
                           onclick="return confirm('¿Seguro que quieres eliminar este usuario?');">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No se encontraron usuarios.</td>
            </tr>
        }
    </tbody>
</table>
