@model APP.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Editar Usuario</h3>
                </div>
                <div class="card-body">
                    @* Mensajes generales de error *@
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div class="alert alert-danger">@error.ErrorMessage</div>
                        }
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label"></label>
                            <input asp-for="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sexo" class="form-label"></label>
                            <select asp-for="Sexo" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option value="M" selected="@Model.Sexo == "M"">Masculino</option>
                                <option value="F" selected="@Model.Sexo == "F"">Femenino</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rol" class="form-label"></label>
                            <select asp-for="Rol" class="form-select">
                                <option value="">Seleccione rol...</option>
                                <option value="ADMIN" selected="@Model.Rol == "ADMIN"">ADMIN</option>
                                <option value="EMPLEADO" selected="@Model.Rol == "EMPLEADO"">EMPLEADO</option>
                                <option value="ENCARGADO" selected="@Model.Rol == "ENCARGADO"">ENCARGADO</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NivelAcademico" class="form-label"></label>
                            <select asp-for="NivelAcademico" class="form-select">
                                <option value="">Seleccione nivel...</option>
                                <option value="Primaria" selected="@Model.NivelAcademico == "Primaria"">Primaria</option>
                                <option value="Secundaria" selected="@Model.NivelAcademico == "Secundaria"">Secundaria</option>
                                <option value="Universidad" selected="@Model.NivelAcademico == "Universidad"">Universidad</option>
                                <option value="Postgrado" selected="@Model.NivelAcademico == "Postgrado"">Postgrado</option>
                            </select>
                            <span asp-validation-for="NivelAcademico" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Institucion" class="form-label"></label>
                            <input asp-for="Institucion" class="form-control" />
                            <span asp-validation-for="Institucion" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
