@model APP.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2>Detalles del Usuario</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@Model.Rol</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Sexo</dt>
            <dd class="col-sm-9">
                @(Model.Sexo == "M" ? "Masculino" : Model.Sexo == "F" ? "Femenino" : "Desconocido")
            </dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
